<div class="dialog box box-border" style="width: 600px;">
  <div class="header">
    <p class="title">ASI - {{asi_num}}</p>
  </div>

  <div class="body">
    <div class="row margin-bottom">
      <div class="col-sm-4"><p>Date Submitted:</p></div>
      <div class="col-sm-8">
        <div class="control-group">
          <div class="controls">
            {{#if canEditASI}}
              <input class="form-control" id="asi-date-submitted" value="{{ unbound getASI.dateSubmitted }}">
            {{else}}
              <input disabled class="form-control" id="asi-date-submitted" value="{{ unbound getASI.dateSubmitted }}">
            {{/if}}
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-4"><p>Submitted By:</p></div>
      <div class="col-sm-8">
        <div class="control-group">
          <div class="controls">
            {{#if canEditASI}}
              <input class="form-control" id="asi-submitted-by" value="{{ unbound getASI.submittedBy }}">
            {{else}}
              <input disabled class="form-control" id="asi-submitted-by" value="{{ unbound getASI.submittedBy }}">
            {{/if}}
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-4">
        <p>Response Requested:</p>
      </div>
      <div class="col-sm-8">
        <div class="control-group">
          <div class="controls">
            {{#if canEditASI}}
              <input class="form-control" id="asi-response-requested" value="">
            {{else}}
              <input disabled class="form-control" id="asi-response-requested" value="">
            {{/if}}
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
    </div>

    {{#unless getRFI}}
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>Assigned To:</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              <input disabled class="form-control" id="asi-assigned-to" value="{{ unbound getASI.assignedTo }}">
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
    {{/unless}}

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Subject:</p>
        <div class="control-group">
          <div class="controls">
            {{#if canEditASI}}
              <input class="form-control" id="asi-subject" value="{{ unbound getASI.subject }}">
            {{else}}
              <input disabled class="form-control" id="asi-subject" value="{{ unbound getASI.subject }}">
            {{/if}}
            <span class="help-inline">{{asiErrors.subject}}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Notes:</p>
        <div class="control-group">
          <div class="controls">
            {{#if canEditASI}}
              <textarea style="width: 100%; max-width: 100%; height: 150px; padding: 10px;" placeholder="Tell us about your ASI, etc" id="asi-notes">{{ unbound getASI.notes }}</textarea>
            {{else}}
              <textarea disabled style="width: 100%; max-width: 100%; height: 150px; padding: 10px;" placeholder="Tell us about your ASI, etc" id="asi-notes">{{ unbound getASI.notes }}</textarea>
            {{/if}}
            <span class="help-inline">{{asiErrors.notes}}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Attachments (select to download):</p>
        <div class="control-group">
          <div id="submittal-attachments">
            {{#each getASI.attachments}}
              <p class="file-preview">
                <a href="/api/asis/download_attachment/{{unbound this.id}}" title="{{unbound this.filename}}">{{truncate this.filename}}</a>
              </p>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="footer">
    <div class="buttons">
      <a class="button" {{action "close"}}>Cancel</a>
      {{#unless getRFI}}
        {{#if canEditAssignedTo}}
          <a id="assign-asi-button" class="button button-green" {{action "openAssignRFIModal" model}}>Assign To</a>
        {{/if}}
      {{/unless}}

      {{#if canEditASI}}
        <a id="submit-asi-button" class="button button-blue" {{action "save" target=controller}}>Save</a>
      {{/if}}
    </div>
  </div>
</div>

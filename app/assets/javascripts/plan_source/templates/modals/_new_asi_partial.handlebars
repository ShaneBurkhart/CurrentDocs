<div class="dialog box box-border" style="width: 600px;">
  <div class="header">
    <p class="title">Add An ASI To This RFI</p>
  </div>
  <div class="body">
    <div class="row margin-bottom">
      <div class="col-sm-4"><p>Plan Sheets Affected:</p></div>
      <div class="col-sm-8">
        <div class="control-group">
          <div class="controls">
            <input class="form-control" id="asi-plan-sheets-affected">
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-4"><p>Included In Addendum #:</p></div>
      <div class="col-sm-8">
        <div class="control-group">
          <div class="controls">
            <input class="form-control" id="asi-in-addendum">
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Subject:</p>
        <div class="control-group">
          <div class="controls">
            <input class="form-control" id="asi-subject">
            <span class="help-inline">{{errors.subject}}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Notes:</p>
        <div class="control-group">
          <div class="controls">
            <textarea style="width: 100%; max-width: 100%; height: 150px; padding: 10px;" placeholder="Tell us about your ASI, etc" id="asi-notes"></textarea>
            <span class="help-inline">{{errors.notes}}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-bottom">
      <div class="col-sm-12">
        <p>Attachments:</p>

        <div class="control-group">
          <div id="attachments-dnd" class="dropzone"></div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Filename</th>
                <th></th>
              </tr>
            </thead>
            <tbody id="asi-attachments">
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
  <div class="footer">
    <div class="buttons">
      <a class="button" {{action "close"}}>Cancel</a>
      <a id="submit-asi-button" class="button button-blue" {{action "submitASI" target=controller}}>Submit ASI</a>
    </div>
  </div>
</div>

<script>
  Dropzone.options.attachmentsDnd = {
    paramName: "files", // The name that will be used to transfer the file
    maxFilesize: 20, // MB
    uploadMultiple: true,
    createImageThumbnails: false,
    // Hide the previews.  We'll make our own.
    previewTemplate: '<div style="display:none"></div>',
  };

  PlanSource.dropzone = new Dropzone("div#attachments-dnd", {
    url: "/api/submittals/upload_attachments"
  });

  $("#asi-attachments").delegate(".remove", "click", function (e) {
    $(e.target.parentNode.parentNode.parentNode).remove();
  });

  PlanSource.dropzone.on("sending", function (file, responseData) {
    var $button = $("#submit-asi-button");
    $button.prop("disabled", true);
    $button.text("Uploading...");
  });

  PlanSource.dropzone.on("complete", function (file, responseData) {
    var $button = $("#submit-asi-button");
    $button.prop("disabled", false);
    $button.text("Submit ASI");
  });

  PlanSource.dropzone.on("success", function (file, responseData) {
    var returnFiles = responseData.files;

    // Success is called for every file so might as well double check the
    // filename was returned before adding element to DOM.
    for (var i = 0; i < returnFiles.length; i++) {
      var returnFile = returnFiles[i];
      if (returnFile.original_filename !== file.name) continue;

      $("#asi-attachments").append([
        '<tr class="file-preview" data-id="' + returnFile.id + '">',
          '<td>',
            returnFile.original_filename,
          '</td>',
          '<td>',
            '<span class="pull-right">',
              '<a class="remove">Remove</a>',
            '</span>',
          '</td>',
        '</tr>',
      ].join(""));
    }
  });
</script>


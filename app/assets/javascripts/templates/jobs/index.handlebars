<h2>My Jobs</h2>
{{#manager}}
	<a href="#" {{action "openAddJobModal"}} class="button button-green">+ Add Job</a>
{{/manager}}
<table class="table table-hover">
	<thead>
		<th>Job Name</th>
		<th>Owner</th>
			<th class="pull-right">Controls</th>
	</thead>
	<tbody>
		{{#each controller}}
			{{#linkTo "job" this tagName="tr" classNames="job"}}
				<td>
					{{name}}
				</td>
				<td>
					{{username}}
				</td>
				<td>
					<ul class="controls pull-right unstyled">
						{{#unless isShared}}
							<li><a {{action "openShareJobModal" this bubbles=false}}>Share</a></li>
							<li><a {{action "openEditJobModal" this bubbles=false}}>Edit</a></li>
							<li><a {{action "openDeleteJobModal" this bubbles=false}}>Delete</a></li>
						{{else}}
							<li>
								<a {{action "openShareJobModal" this bubbles=false}}>Share</a>
							</li>
							<li>
								<a {{action "openUnshareJobModal" this bubbles=false}}>Unshare</a>
							</li>
						{{/unless}}
					</ul>
				</td>
			{{/linkTo}}
		{{else}}
			<tr>
				<td>
					{{#manager}}
						<p>You need to add a job to view and share.</p>
					{{else}}
						<p>You are a viewer.  You need someone to share jobs/plans with you to view.</p>
					{{/manager}}
				</td>
				<td></td>
				<td></td>
			</tr>
		{{/each}}
	</tbody>
</table>
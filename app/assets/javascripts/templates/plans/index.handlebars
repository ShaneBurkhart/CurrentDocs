{{#each controller itemController="plan"}}
	<tr>
		<td>
			{{planNum}}
		</td>
		<td>
			{{planName}}
		</td>
		<td>
			{{date updatedAt}}
		</td>
		<td><a href="/api/download/{{unbound id}}">{{filename}}</a></td>
		<td>
			<ul class="controls pull-right unstyled">
				<li><a {{action "openEditPlanModal" this}}>Edit</a></li>
				<li><a {{action "upload"}} data-id="{{unbound id}}">Upload</a></li>
				<li><a {{action "openDeletePlanModal" this}}>Delete</a></li>
			</ul>
		</td>
	</tr>
	{{else}}
		<tr>
			<td>
				<p>There aren't any plans in this job.</p>
			</td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
{{/each}}

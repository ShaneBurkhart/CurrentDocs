<div class="modal-wrapper">
	<div class="overlay"></div>
	<div class="dialog box box-border">
		<div class="header">
			<p class="title">Enter a job name.</p>
		</div>
		<div class="body">
			<p>Enter a name for your new job.</p>
			{{ view PlanSource.TextField placeholder="Job name" focus=true id="new-job-name" }}
		</div>
		<div class="footer">
			<div class="buttons">
				<a class="button button-blue" {{action "addJob" target=controller}} >Create</a>
				<a class="button" {{action "close"}}>Cancel</a>
			</div>
		</div>
	</div>
</div>
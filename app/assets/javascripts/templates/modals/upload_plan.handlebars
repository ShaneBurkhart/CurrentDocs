<div class="modal-wrapper">
	<div class="overlay"></div>
	<div class="dialog box box-border">
		<div class="header">
			<p class="title">Upload a file.</p>
		</div>
		<div class="body">
			<p>Select page size and file to upload.</p>
			<form enctype="multipart/form-data" id="plan_source_upload_form">
				<input type="hidden" name="plan_id" id="plan_id">
				<div class="control-group">
					<div class="controls">
						<select name="page_size" id="page_size">
							<option>Select Size</option>
							{{#each pageSizes}}
								<option>{{this}}</option>
							{{/each}}
						</select>
						<span class="help-inline"></span>
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<span class="help-inline"></span>
						<br>
						<input type="file" name="file" id="file">
					</div>
				</div>
			</form>
		</div>
		<div class="footer">
			<div class="buttons">
				<a class="button button-blue" {{action "uploadPlan" target=controller}} >Upload</a>
				<a class="button" {{action "close"}}>Cancel</a>
			</div>
		</div>
	</div>
</div>
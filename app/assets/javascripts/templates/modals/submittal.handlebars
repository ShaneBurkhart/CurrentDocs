<div class="modal-wrapper">
  <div class="overlay"></div>
  <div class="dialog box box-border" style="width: 600px;">
    <div class="header">
      <div class="pull-right">
        <button type="button" {{action "close"}} class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      {{#if isNew }}
        <h4 class="modal-title">Shop Drawing Submission Form</h4>
        <p>Please make sure all information is complete and accurate.</p>
      {{else}}
        {{#if isInReview }}
          <h4 class="modal-title">Shop Drawing Review Form</h4>
          <p>Please make sure all information is complete and accurate.</p>
        {{else}}
          <h4 class="modal-title">Shop Drawing Submittal</h4>
        {{/if}}
      {{/if}}
    </div>
    <div class="body">
      <div class="control-group">
        <div class="controls">
          <div class="form-inline">
            <span class="help-inline"></span>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>Date Submitted:</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              {{ view PlanSource.TextField class="form-control" id="submittal-date-submitted" }}
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>Submitted By:</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              {{ view PlanSource.TextField class="form-control" id="submittal-submitted-by" }}
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>Project:</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              {{ view PlanSource.TextField class="form-control" id="submittal-project" }}
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>CSI Code (if known):</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              {{ view PlanSource.TextField class="form-control" id="submittal-csi-code" }}
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <p>Submittal Description:</p>
        </div>
        <div class="col-sm-8">
          <div class="control-group">
            <div class="controls">
              {{ view PlanSource.TextField class="form-control" id="submittal-description" }}
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-12">
          <p>Notes:</p>
          <div class="control-group">
            <div class="controls">
              <textarea style="width: 100%; max-width: 100%; height: 150px; padding: 10px;" placeholder="You message to the group..." id="message-to-group"></textarea>
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-12">
          <p>Attachments:</p>
          <div class="control-group">
            <div class="controls">
              <input type="file" name="file" id="file">
              <span class="help-inline"></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="footer">
      <div class="buttons">
        <a class="button button-blue" id="contact-share" {{action "shareWithContacts" target=controller}} >Update</a>
        <a class="button" {{action "close" }} >Cancel</a>
      </div>
    </div>
  </div>
</div>
<script>
$("#share-search-input-modal").keyup(function () {
  var filter = jQuery(this).val();
  jQuery("#contacts-list tbody tr").each(function () {
    if (jQuery(this).text().search(new RegExp(filter, "i")) < 0) {
      jQuery(this).hide();
    } else {
      jQuery(this).show()
    }
  });
});
</script>

<h1>Hi Mom!</h1>
<table class="table table-striped">
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th>Email</th>
    <th>Company</th>
    <th>Created At</th>
    <th>Last Seen</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr class="<%= "error" if user.expired %>" >
      <td><%= user.type %></td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.company %></td>
      <td><%= distance_of_time_in_words(Time.now, user.created_at) %> ago</td>
      <td><%= distance_of_time_in_words(Time.now, user.last_seen) %> ago</td>
      <td>
        <div class="pull-right">
          <% if user.manager? %>
            <%= link_to "Demote", demote_path(user.id), class: "btn btn-danger" %>
          <% end %>
          <%= link_to "Delete", delete_user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

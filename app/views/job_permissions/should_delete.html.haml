.modal-wrapper
  .overlay

  .dialog.box.box-border
    .header
      %p.title Are you sure?

    .body
      %p Are you sure you want to unshare Job: #{@job_permission.job.name} with #{@share_link.name}?

    .footer
      .buttons
        = link_to "Unshare", job_permission_path(@job_permission), method: :delete, class: "button button-red"
        - if request.format == 'modal'
          %a.button.close-modal Cancel
        - else
          %a.button{ href: share_link_path(@share_link) } Cancel

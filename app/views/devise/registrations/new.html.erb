<% content_for :title, "Sign Up" %>
<% @user.company = nil %>
<div class="section">
	<div class="container">
		<h2>Sign up</h2>
		<div class="row">
			<div class="col-sm-12">
				<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
				  <%= f.error_notification %>
				  <%= display_base_errors resource %>
				  <%= f.input :first_name, :autofocus => true, :required => true, :input_html => {:class =>"form-control input-block-level " }%>
				  <%= f.input :last_name, :required => true, :input_html => { :class =>"form-control input-block-level "} %>
          <%= f.input :company, :required => true, :input_html => {:class =>"form-control input-block-level " } %>
				  <%= f.input :email, :required => true, :input_html => {:class =>"form-control input-block-level "} %>
				  <%= f.input :password, :required => true, :input_html => {:class =>"form-control input-block-level " }%>

				  <%= f.button :submit, 'Sign up', :style=>"margin-top:20px", :class => 'button button-blue form-control' %>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>

<% content_for :title, "Sign Up" %>
<div class="section">
	<div class="container">
		<h2>Sign up</h2>
		<div class="row">
			<div class="span4">
				<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
				  <%= f.error_notification %>
				  <%= display_base_errors resource %>
				  <%= f.input :type, :collection => ["Viewer", "Manager"],
				    :as => :select, :required => true %>
				  <%= f.input :first_name, :autofocus => true, :required => true %>
				  <%= f.input :last_name, :required => true %>
				  <%= f.input :email, :required => true %>
				  <%= f.input :password, :required => true %>
				  <%= f.input :password_confirmation, :required => true %>
				  <%= f.button :submit, 'Sign up', :class => 'button button-blue' %>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
			<div class="span8">
				<h3>Accounts</h3>
				<div class="row">
					<div class="span8">
						<h4>Viewer</h4>
						<ul>
							<li>View plans shared by managers.</li>
							<li>Print plans by entering billing information.</li>
							<li>Generally for subcontractors or superintendents who only need the ability to print and view plans.</li>
						</ul>
					</div>
				</div>
				<div class="row">
					<div class="span8">
						<h4>Manager</h4>
						<ul>
							<li>Create, edit, destroy plans and jobs.</li>
							<li>Share jobs with other users.</li>
							<li>Save billing information for quick one click printin.</li>
							<li>Generally for project manager who want to share with subcontractors and superintendents.</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
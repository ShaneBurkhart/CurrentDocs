<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title yield(:title) %></title>
    <%= favicon_link_tag %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Plansource" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <div id="main" role="main">
      <%= render 'layouts/browser_error' %>
      <div class="header">
        <%= render 'layouts/navigation' %>
      </div>
        <div class="container">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
            </div>
          </div>
        </div> <!--! end of .container -->
        <%= yield %>
      <div id="push"></div>
    </div> <!--! end of #main -->

    <footer>
      <div class="container">
        <p class="muted credit">Create By <a href="">Shane Burkhart</a></p>
      </div>
    </footer>
  </body>
</html>

<div class="navigation navigation-dark navigation-fixed">
  <div class="container">
    <ul>
      <li class="<%= controller_name == "faq" ? "active" : "" %>">
        <%= link_to "FAQ", faq_path %>
      </li>
      <li class="<%= controller_name == "mobile" ? "active" : "" %>">
        <%= link_to "Mobile Apps", mobile_path %>
      </li>

      <div class="pull-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to 'Admin', users_path %>
            </li>
          <% end %>

          <li class="<%= controller_name == "registrations" && action_name == "edit" ? "active" : "" %>">
          <%= link_to 'Edit Account', edit_user_registration_path %>
          </li>
        <% else %>
          <li class="<%= controller_name == "registrations" && action_name == "new" ? "active" : "" %>">
          <%= link_to 'Sign up', new_user_registration_path %>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="<%= controller_name == "app" ? "active" : "" %>">
          <%= link_to 'My Jobs', app_path %>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li>
          <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
          </li>
        <% else %>
          <li class="<%= controller_name == "sessions" && action_name == "new" ? "active" : "" %>">
          <%= link_to 'Login', new_user_session_path %>
          </li>
        <% end %>
      </div>
    </ul>
  </div>
</div>

<div class="brand-container">
  <div class="container">
      <h3><%= link_to (image_tag "logo.png"), !current_user ? root_path : app_path, :class => 'logo' %></h3>
  </div>
</div>
